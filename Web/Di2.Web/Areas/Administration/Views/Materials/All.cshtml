@using Di2.Web.ViewModels.Materials.ViewModels
@model IEnumerable<MaterialsViewModel>

@using Di2.Common
@{
    this.ViewData["Title"] = "Списък на всички материали";
}

<div class="text-center">
    <h2 class="display-3">@this.ViewData["Title"]</h2>
</div>

<div class="row mt-1">
    <h6 class="col-md-2 text-left">Снимка</h6>
    <h6 class="col-md-2 text-left">Име</h6>
    <h6 class="col-md-3 text-left">Доп. инфо</h6>
    <h6 class="col-md-1 text-left">Подкатегория</h6>
    <h6 class="col-md-1 text-left">Категория</h6>
    <h6 class="col-md-1 text-left">Изтрий</h6>
</div>

@foreach (var item in Model)
{
    <div class="row">
        <img src="@item.Image" alt="materialImg" class="img-fluid max-width: 20%" />
        <h5 class="col-md-2 text-left">@item.Name</h5>
        <h5 class="col-md-3 text-left">@item.Description</h5>
        <h5>@item.ExtraInfo</h5>
        @*<i class="fas fa-user-edit"></i>*@
        @*<h5>@item.UserUserName</h5>*@
        <h6 class="col-md-1 text-left">@item.SubCategoryName</h6>
        <h6 class="col-md-1 text-left">@item.Category.Name</h6>
        <div class="col-md-1 text-left">
            <form asp-controller="Materials" asp-action="Delete" asp-route-id="@item.Id" method="get">
                <input type="submit" class="btn-danger" value="Изтрий" />
            </form>
        </div>
    </div>
}

