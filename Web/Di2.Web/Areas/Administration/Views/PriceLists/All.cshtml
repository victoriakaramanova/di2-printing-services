@using Di2.Web.ViewModels.PriceLists.ViewModels
@model IEnumerable<PriceListViewModel>

@using Di2.Common
@{
    this.ViewData["Title"] = "Списък на ценовите листи";
}
<div class="text-center">
    <h2 class="display-3">@this.ViewData["Title"]</h2>
</div>
<hr />

<div class="row mt-1">
    <h6 class="col-md-3 text-left">Име на материал</h6>
    <h6 class="col-md-3 text-left">Описание</h6>
    <h6 class="col-md-3 text-left">Доставчик</h6>
    <h6 class="col-md-1 text-left">Минимално к-во за доставка</h6>
    <h6 class="col-md-1 text-left">Доставна цена</h6>
    <h6 class="col-md-1 text-left">Изтрий</h6>
</div>
@foreach (var item in Model)
{
    <div class="row">
        <h5 class="col-md-3 text-left">@item.Material.Name</h5>
        <h5 class="col-md-3 text-left">@item.Material.Description</h5>
        <h5 class="col-md-3 text-left">@item.Supplier.Name</h5>
        <h5 class="col-md-1 text-left">@item.MinimumQuantityPerOrder</h5>
        <h5 class="col-md-1 text-left">@item.UnitPrice</h5>
        <div class="col-md-1 text-left">
            <form asp-controller="PriceLists" asp-action="Delete" asp-route-id="@item.Material.Id" asp-route-supplierid="@item.SupplierId" asp-route-mqo="@item.MinimumQuantityPerOrder" asp-route-unitprice="@item.UnitPrice" method="get">
                <input type="submit" class="btn-danger" value="Изтрий" />
            </form>
        </div>
    </div>
}
