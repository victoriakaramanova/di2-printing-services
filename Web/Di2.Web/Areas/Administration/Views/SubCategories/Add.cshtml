@using Di2.Common;
@using Di2.Web.ViewModels.Categories.ViewModels;
@*@inject Di2.Services.Data.ICategoriesService CategoriesService*@
@{
    this.ViewData["Title"] = "Add SubCategory";
    //var categories = this.CategoriesService.GetAllCategories<CategoryViewModel>();

}
@model Di2.Web.ViewModels.SubCategories.InputModels.CreateSubCategoryInputModel


    <form asp-controller="SubCategories" asp-action="Add" method="post">
        @*<div asp-validation-summary="All"></div>*@

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Category"></label>
            <select asp-for="Category" class="form-control" asp-items="@Model.Categories">
                <option value="">Select Category</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary" value="Submit" />
    </form>