@using Di2.Web.ViewModels.SubCategories.ViewModels
@model IEnumerable<SubCategoriesViewModel>

@using Di2.Common
@{
    this.ViewData["Title"] = "List All SubCategories";
}
<div class="text-center">
    <h2 class="display-3">@this.ViewData["Title"]</h2>
</div>
@foreach (var subCategory in Model)
{
    <div class="row">
        <h5>@subCategory.Name</h5>
        <h5>@subCategory.Description</h5>
        <h5>@subCategory.Category</h5>
        <h5>@subCategory.UserUsername</h5>
        @*<time datetime="@subCategory.CreatedOn.ToString("O")">@subCategory.CreatedOn.ToString("dd.MM.yyyy HH:mm")</time>*@
        <form asp-controller="SubCategories" asp-action="Delete" asp-route-id="@subCategory.Id" method="get">
            <input type="submit" class="btn-danger" value="Изтрий" />
        </form>
    </div>
}
