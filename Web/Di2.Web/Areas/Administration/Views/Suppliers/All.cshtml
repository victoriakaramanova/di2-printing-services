@using Di2.Web.ViewModels.Suppliers.ViewModels
@model IEnumerable<SupplierViewModel>

@using Di2.Common
@{
    this.ViewData["Title"] = "Списък на доставчиците";
}
<div class="text-center">
    <h2 class="display-3">@this.ViewData["Title"]</h2>
</div>
<div class="row mt-1">
    <h6 class="col-md-2 text-left">Име</h6>
    <h6 class="col-md-3 text-left">Имейл</h6>
    <h6 class="col-md-4 text-left">Адрес</h6>
    <h6 class="col-md-2 text-left">Телефон</h6>
    <h6 class="col-md-1 text-left">Изтрий</h6>
</div>
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-2 text-left">
            <h5>@item.Name</h5>
        </div>
        <div class="col-md-3 text-left">
            <h5>@item.Email</h5>
        </div>
        <div class="col-md-4 text-left">
            <h5>@item.Address</h5>
        </div>
        <div class="col-md-2 text-left">
            <h5>@item.Phone</h5>
        </div>
        <div class="col-md-1 text-left">
            <form asp-controller="Suppliers" asp-action="Delete" asp-route-id="@item.Id" method="get">
                <input type="submit" class="btn-danger" value="Изтрий" />
            </form>
        </div>
    </div>
}
