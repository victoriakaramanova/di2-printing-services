@using Di2.Common
@model Di2.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}";
}

<div class="text-center">
    <h1 class="display-5">@this.ViewData["Title"]</h1>
</div>


@foreach (var material in Model.Materials)
{
    <div class="row">
        @*<img src="@material.ImageUrl" width="100" class="mr-3" alt="@category.Title">*@


        @material.Name, @material.Description
        @*@material.Image*@
        <img src="@material.Image" />

        @material.Category.Name
        @material.SubCategory.Name
    </div>
}

