@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@model Di2.Web.ViewModels.Contacts.ContactsInputModel
@using Di2.Common
@{
    ViewData["Title"] = "КОНТАКТ";
}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<main class="site-content">
    <div class="site-wrapper">
        <div class="contacts-container">
            <section class="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2914.187878967086!2d25.63078431536859!3d43.07954529735284!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x10b66cba7b3037dc!2z0JTQuCAyINCi0YDQtdC50LQ!5e0!3m2!1sbg!2sbg!4v1575935889302!5m2!1sbg!2sbg" frameborder="0"></iframe>
            </section>

            <section class="contact-details">

                <ul class="social">
                    <li>
                        <i class="fas fa-phone fa-2x"></i>
                        <p>0898400235</p>
                    </li>
                    <li>
                        <i class="fas fa-envelope fa-2x"></i>
                        <p>@GlobalConstants.SystemEmail</p>
                    </li>
                    <li>
                        <i class="fas fa-map-marker fa-2x"></i>
                        <p>В. Търново ул. Тодор-Светослав 23</p>
                    </li>
                </ul>

            </section>

            <section class="entry-content">
                <form method="post">
                    <fieldset>
                        <legend>За връзка с нас</legend>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="sub">
                            <div class="field">
                                <input asp-for="Name">
                                <label asp-for="Name"></label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="field">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" value="@this.User.Identity.Name" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="field">
                                <label asp-for="Subject"></label>
                                <input asp-for="Subject" class="form-control" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="field">
                            <textarea asp-for="Content" id="msg" cols="7" rows="6"></textarea>
                            <label asp-for="Content"></label>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        @*<input type="hidden" id="RecaptchaValue" name="RecaptchaValue" />*@
                        <div class="field submit">
                            <input type="submit" value="Изпрати">
                        </div>
                    </fieldset>
                </form>
            </section>
        </div>
    </div>
</main>

